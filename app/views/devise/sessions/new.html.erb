<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1500917832468-298fa6292e2b?ixlib=rb-1.2.1&auto=format&fit=crop&w=2100&q=80);">

<div class="container">
  <div class="row">
     <div class="text">
        <h1> Live an experience
         <br/>
         <br/>
        with Boat & Breakfast </h1>
      </div>
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="Log">
        <h2>Log in</h2>
      </div>
      <div class="form-login">

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email", placeholder: "Example@gmail.com" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password", placeholder: "********" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

            <div class="form-actions">
              <%= f.button :submit, "Log in", class: "btn btn-primary" %>
            </div>
            <% end %>
            <div class="forgot">
              <%= render "devise/shared/links" %>
            </div>
        </div>
    </div>
  </div>
</div>

</div>


<div class="footer">
  <div class="footer-links">
