<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1500917832468-298fa6292e2b?ixlib=rb-1.2.1&auto=format&fit=crop&w=2100&q=80);">

<div class="container">
   <div class="form-row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
        <h2>Create a Boat</h2>
      </div>
          <div class="form-inputs-2">
            <%= simple_form_for [@boat] do |f| %>
              <%= f.input :name %>
              <%= f.input :category %>
              <%= f.input :photo %>
              <%= f.input :brand %>
              <%= f.input :model %>
              <%= f.input :capacity %>
              <%= f.input :length %>
              <%= f.input :location %>
              <%= f.input :price %>
              <%= f.input :accesories %>
              <%= f.input :skipper %>
              <%=f.submit class: "btn btn-primary" %>
            <%end%>
          </div>
    </div>
</div>






<p> link_to 'Back', user_path(user) <p>

